{
  "manifest_version": 2,
  "name": "Certificate Expiry Checker",
  "version": "1.0",
  "description": "Displays SSL certificate expiry information and highlights the search bar if expiry is near.",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_title": "Cert Checker",
    "default_popup": "popup.html" 
  },
  "icons": {
    "48": "icons/icon.png"
  }
}